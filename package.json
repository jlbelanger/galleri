{
	"name": "@jlbelanger/galleri",
	"version": "1.0.3",
	"description": "Databaseless vanilla JS photo gallery.",
	"license": "GPL-3.0-only",
	"type": "module",
	"author": {
		"name": "Jenny Belanger",
		"email": "mail@jennybelanger.com",
		"url": "https://www.jennybelanger.com/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jlbelanger/galleri.git"
	},
	"scripts": {
		"build": "rm -rf dist/ && npx webpack --mode=production && mv dist/css/minimal.min.css dist/css/galleri.min.css && rm dist/js/theme.min.js dist/js/minimal.min.js",
		"lint": "npm run lint:css && npm run lint:js",
		"lint:css": "npx stylelint 'css/**/*.css'",
		"lint:js": "npx eslint .",
		"lint:php": "./vendor/bin/phpcs",
		"test:php": "./vendor/bin/phpunit",
		"test:cypress": "npx cypress open",
		"start": "npx update-browserslist-db && npx webpack --watch"
	},
	"dependencies": {
		"normalize.css": "^8.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.26.0",
		"@csstools/postcss-global-data": "^3.1.0",
		"@eslint/js": "^9.39.2",
		"@stylistic/eslint-plugin": "^5.6.1",
		"@stylistic/stylelint-plugin": "^4.0.0",
		"babel-loader": "^10.0.0",
		"css-loader": "^7.1.2",
		"css-minimizer-webpack-plugin": "^7.0.4",
		"cypress": "^15.8.1",
		"cypress-file-upload": "^5.0.8",
		"eslint": "^9.39.2",
		"eslint-plugin-import": "^2.32.0",
		"globals": "^16.5.0",
		"mini-css-extract-plugin": "^2.9.4",
		"postcss": "^8.5.6",
		"postcss-loader": "^8.2.0",
		"postcss-preset-env": "^10.5.0",
		"stylelint": "^16.26.1",
		"stylelint-config-standard": "^39.0.1",
		"stylelint-order": "^7.0.0",
		"terser-webpack-plugin": "^5.3.16",
		"webpack": "^5.104.1",
		"webpack-cli": "^6.0.1"
	},
	"main": "dist/js/galleri.min.js",
	"module": "index.js",
	"source": "index.js",
	"browserslist": [
		"defaults",
		"iOS >= 12"
	]
}
